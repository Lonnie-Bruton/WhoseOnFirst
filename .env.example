# WhoseOnFirst Environment Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Application Settings
APP_NAME=WhoseOnFirst
APP_VERSION=0.1.0
ENVIRONMENT=development  # development, staging, production
DEBUG=True
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL

# Server Configuration
HOST=0.0.0.0
PORT=8000
WORKERS=2  # Number of Uvicorn workers (production)

# Database Configuration
# SQLite (Phase 1)
DATABASE_URL=sqlite:///./data/whoseonfirst.db

# PostgreSQL (Phase 2+)
# DATABASE_URL=postgresql://username:password@localhost:5432/whoseonfirst
# DATABASE_POOL_SIZE=5
# DATABASE_MAX_OVERFLOW=10

# Twilio Configuration
# Get these from https://console.twilio.com/
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_PHONE_NUMBER=+15551234567

# Scheduler Configuration
SCHEDULER_TIMEZONE=America/Chicago
NOTIFICATION_TIME_HOUR=8  # 8 AM
NOTIFICATION_TIME_MINUTE=0
SCHEDULER_MISFIRE_GRACE_TIME=300  # 5 minutes in seconds

# Security (Phase 2+)
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS Settings (Phase 2+)
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Notification Settings
SMS_MAX_LENGTH=160
SMS_RETRY_ATTEMPTS=3
SMS_RETRY_DELAY=60  # seconds between retries

# Logging Configuration
LOG_FILE_PATH=./logs/whoseonfirst.log
LOG_ROTATION_SIZE=10485760  # 10 MB
LOG_BACKUP_COUNT=5

# Backup Configuration
BACKUP_ENABLED=True
BACKUP_DIRECTORY=./backups
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_HOUR=2  # 2 AM daily backup

# Feature Flags (Future)
ENABLE_EMAIL_NOTIFICATIONS=False
ENABLE_TEAMS_INTEGRATION=False
ENABLE_SLACK_INTEGRATION=False
ENABLE_API_RATE_LIMITING=False

# Monitoring (Future)
SENTRY_DSN=
PROMETHEUS_ENABLED=False
PROMETHEUS_PORT=9090

# Development/Testing
TESTING=False
TEST_DATABASE_URL=sqlite:///./test.db
MOCK_TWILIO=False  # Set to True to mock Twilio in development
